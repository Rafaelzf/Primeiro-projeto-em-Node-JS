

{{#each erros}}
    <div class="alert alert-danger alert-dismissible fade show mt-2" role="alert">
        <strong>{{texto}}</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
{{else}}
{{/each}}



<form class="form-signin" action="" method="POST">
  
     <div class="input-group mb-3">
      <h1 class="h3 mb-3 font-weight-normal">Crie sua conta</h1>
      <hr /> 
    </div> 
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon1">#User</span>
    </div>
    <input type="text" id="inputName" name="inputName" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1" required >
  </div>

  <div class="input-group mb-3">
    <input type="text" class="form-control" id="inputEmail" name="inputEmail" placeholder="E-mail" aria-label="Recipient's username" aria-describedby="basic-addon2" required>
    <div class="input-group-append">
      <span class="input-group-text" id="basic-addon2">@example.com</span>
    </div>
  </div>


<div class="input-group mb-3">
  <div class="input-group-prepend">
    <span class="input-group-text" id="inputPassword">Digite a senha</span>
  </div>
  <input type="password" name="inputPassword" id="inputPassword" class="form-control" aria-label="Sizing example input" aria-describedby="inputPassword" required >
</div>


<div class="input-group mb-3">
  <div class="input-group-prepend">
    <span class="input-group-text" id="inputRepitaPassword">Digite a senha novamente</span>
  </div>
  <input type="password" id="inputRepitaPassword" name="inputRepitaPassword" class="form-control" aria-label="Sizing example input" aria-describedby="inputRepitaPassword" required>
</div>


  <div class="input-group mb-3">
    <button class="btn btn-lg btn-primary" type="submit">Criar conta</button>
  </div>
  
  <p class="mt-5 mb-3 text-muted text-center">&copy; 2017-2019</p>
</form>



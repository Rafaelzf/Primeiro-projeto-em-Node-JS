{{#each erros}}
    <div class="alert alert-danger alert-dismissible fade show mt-2" role="alert">
        <strong>{{texto}}</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
{{else}}
{{/each}}



<div class="border border-info rounded-lg card shadow-sm">
    <h5 class="card-title d-block p-2 bg-danger rounded-top text-white">Editar postagem</h5>
    <div class="card-body">
        <form action="/admin/postagens/edit/" method="POST">
            <input type="hidden" name="id" value="{{postagens._id}}">
            <div class="form-group">
                <label for="nome">Título: </label>
                <input type="text" name="titulo" id="titulo" placeholder="Título" class="form-control" value="{{postagens.titulo}}">
            </div>
           
            <div class="form-group">
                <label for="descricao">Descrição: </label>
                <input type="text" name="descricao" id="descricao" placeholder="Descrição" class="form-control" value="{{postagens.descricao}}">
            </div>
            <div class="form-group">
                <label for="conteudo">Conteúdo: </label>
                <textarea class="form-control" name="conteudo" id="conteudo" rows="3" placeholder="Conteúdo">{{postagens.conteudo}}</textarea>
            </div>
            <div class="form-group">
                <label for="categoria">Categoria: </label>
                <select class="custom-select" name="categoria" id="categoria">
                    {{#each categorias}}
                         <option data-slug="{{slug}}" value="{{_id}}">{{nome}}</option>
                    {{else}}
                        <option value="0">Nenhuma categoria listada</option>
                    {{/each}}
    
                </select>
            </div>
             <div class="form-group">
                <label for="slug">Slug: </label>
                <input type="text" name="slug" id="slug" placeholder="Slug da categoria" class="form-control" value="{{postagens.slug}}" readonly>
            </div>
            <button type="submit" class="btn btn-dark">Editar postagem</button>
        </form>
    </div>
</div>
